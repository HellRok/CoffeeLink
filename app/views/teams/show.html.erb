<h1>
  <%= @team.domain %>
</h1>

<h2>Who's buying next?</h2>
<% @purchase_order.each do |user| %>
  <div>
    <%= user.name %> -
    <% if user.purchases.bought_order.first %>
      Last bought on
      <%= user.purchases.bought_order.first.created_at.to_date %>
    <% else %>
      Yet to buy
    <% end %>
  </div>
<% end%>

<h2>Purchase History</h2>
<%= render @purchases %>
